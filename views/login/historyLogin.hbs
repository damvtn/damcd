<h2><center> <font color="red">  {{viewTitle}}  </font></center></h2>
<form action="/login" method="POST" autocomplete="off">
    <input type="hidden" name="_id" value="{{login._id}}">

    <div class=" form-group mr-2">
        <div class="form-group">
        <label>ID Login</label>
        <input type="text" class="form-control" name="ID" value="{{login.ID}}" placeholder="ID">
        <div class="text-danger">
        </div>
    </div>

    <div class="form-group">
        <label>Password</label>
        <input type="password" class="form-control" name="" value="{{login.Password}}"
            placeholder="">
        <div class="text-danger">
        </div>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-info"><i class="fa fa-database"></i>Submit</button>
        <a href="/orders/list"></a>
    </div>
    </div>
    
</form>