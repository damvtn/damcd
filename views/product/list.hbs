<h3>
     <p>Product List</p>
         <a href="/product" class="btn btn-primary">
        <i class="fas fa-plus-circle"> </i> New Product
    </a>

     <a href="/employee/list" class="btn btn-danger">
        <i class="fas fa-users"> </i> List Employee
    </a>

    <a href="/orders/list" class="btn btn-success">
        <i class="fas fa-shopping-cart"></i> List Order
    </a>
    
    <a href="/login" class="btn btn-info">
        <i class="fas fa-sign-out-alt"> </i> Log out
    </a>
</h3>
<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Product Name</th>
            <th>Category</th>
            <th>Origin</th>
            <th>Description</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {{#each list}}
        <tr>
            <td>{{this.ID}}</td>
            <td>{{this.NameProduct}}</td>
            <td>{{this.Category}}</td>
            <td>{{this.Origin}}</td>
            <td>{{this.Description}}</td>
            <td>
                <a href="/product/{{this._id}}">
                    <i class="fa fa-pencil fa-lg" aria-hidden="true"></i>
                </a>
                <a href="/product/delete/{{this._id}}"
                    onclick="return confirm('Are you sure to delete this record?');">
                    <i class="fa fa-trash fa-lg" aria-hidden="true">

                    </i>
                </a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>